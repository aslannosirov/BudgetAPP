@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section style="background-image: url('https://as2.ftcdn.net/v2/jpg/02/64/76/77/1000_F_264767754_U7zfIqabPY0aBG85NqowYz3ACQTlXd4s.jpg');">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-4">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-4">Create an account</h2>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.FirstName" class="form-control form-control-lg" autocomplete="given-name" aria-required="true" />
                                    <label class="form-label" asp-for="Input.FirstName">First Name</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.MiddleName" class="form-control form-control-lg" autocomplete="additional-name" />
                                    <label class="form-label" asp-for="Input.MiddleName">Middle Name</label>
                                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.LastName" class="form-control form-control-lg" autocomplete="family-name" aria-required="true" />
                                    <label class="form-label" asp-for="Input.LastName">Last Name</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" aria-required="true" />
                                    <label class="form-label" asp-for="Input.Email">Email Address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <label class="form-label" asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PhoneNum" class="form-control form-control-lg" autocomplete="tel" aria-required="true" />
                                    <label class="form-label" asp-for="Input.PhoneNum">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNum" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PostalCode" class="form-control form-control-lg" autocomplete="postal-code" aria-required="true" />
                                    <label class="form-label" asp-for="Input.PostalCode">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button id="registerSubmit" type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="#!" class="fw-bold text-body"><u>Login here</u></a></p>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
