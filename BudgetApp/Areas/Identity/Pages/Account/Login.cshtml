@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<section style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp'); background-size: cover; height: 100vh;">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-2">
            <div class="card" style="border-radius: 15px;">
                <div class="card-body p-3">
                    <h2 class="text-uppercase text-center mb-4">Log In</h2>
                        <form id="account" method="post" class="mt-4 p-4 border rounded">
                            <hr />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email Address" />
                                <label asp-for="Input.Email">Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <label asp-for="Input.RememberMe" class="form-check-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" /> @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log In</button>
                            </div>

                            <div class="mb-3">
                                <p class="text-center">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a><br>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
